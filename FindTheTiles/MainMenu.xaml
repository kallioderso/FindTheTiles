<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FindTheTiles.MainMenu"
             BackgroundColor="#F9FBFF">

    <ContentPage.Background>
        <LinearGradientBrush EndPoint="0,1">
            <GradientStop Color="#F9FBFF" Offset="0.0" />
            <GradientStop Color="#E6F0FF" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <VerticalStackLayout Padding="32,70" Spacing="44" HorizontalOptions="Center" VerticalOptions="Center">
        <Label Text="Find the Tiles"
               FontSize="44"
               FontAttributes="Bold"
               TextColor="#2D5FFF"
               HorizontalOptions="Center"
               Shadow="2,2,8,#B0C4FF" />

        <HorizontalStackLayout Spacing="28" HorizontalOptions="Center">
            <Frame BackgroundColor="#F3F7FF"
                   CornerRadius="20"
                   Padding="22,14"
                   HasShadow="True"
                   BorderColor="#E0E8FF">
                <VerticalStackLayout Spacing="2">
                    <Label Text="Highscore"
                           FontSize="15"
                           TextColor="#7A8FA6"
                           HorizontalOptions="Center"/>
                    <Label Text="0"
                           x:Name="HighscoreLabel"
                           FontSize="26"
                           FontAttributes="Bold"
                           TextColor="#2D5FFF"
                           HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </Frame>
            <Frame BackgroundColor="#F3F7FF"
                   CornerRadius="20"
                   Padding="22,14"
                   HasShadow="True"
                   BorderColor="#E0E8FF">
                <VerticalStackLayout Spacing="2">
                    <Label Text="Aktueller Score"
                           FontSize="15"
                           TextColor="#7A8FA6"
                           HorizontalOptions="Center"/>
                    <Label Text="0"
                           x:Name="CurrentScoreLabel"
                           FontSize="26"
                           FontAttributes="Bold"
                           TextColor="#2D5FFF"
                           HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </Frame>
        </HorizontalStackLayout>

        <Button Text="Spiel starten"
                FontSize="22"
                BackgroundColor="#6EC1E4"
                TextColor="#FFFFFF"
                CornerRadius="18"
                Padding="24,12"
                HorizontalOptions="Center"
                Clicked="Button_OnClicked"
                Shadow="0,4,12,#B0C4FF" />
    </VerticalStackLayout>
</ContentPage>