<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:findTheTiles="clr-namespace:FindTheTiles"
             x:Class="FindTheTiles.GameView"
             BackgroundColor="#F9FBFF">
    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsVisible="False" IsEnabled="False" />
    </Shell.BackButtonBehavior>
    <ContentPage.Background>
        <LinearGradientBrush EndPoint="0,1">
            <GradientStop Color="#F9FBFF" Offset="0.0" />
            <GradientStop Color="#E6F0FF" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="StackLayout" x:Key="MainStack">
                <Setter Property="VisualStateManager.VisualStateGroups">
                    <VisualStateGroupList>
                        <VisualStateGroup>
                            <VisualState x:Name="Portrait">
                                <VisualState.StateTriggers>
                                    <OrientationStateTrigger Orientation="Portrait"/>
                                </VisualState.StateTriggers>
                                <VisualState.Setters>
                                    <Setter Property="Orientation" Value="Vertical"/>
                                </VisualState.Setters>
                            </VisualState>
                            <VisualState x:Name="Landscape">
                                <VisualState.StateTriggers>
                                    <OrientationStateTrigger Orientation="Landscape"/>
                                </VisualState.StateTriggers>
                                <VisualState.Setters>
                                    <Setter Property="Orientation" Value="Horizontal"/>
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateGroupList>
                </Setter>
            </Style>
            <Style TargetType="Label" x:Key="hilfsTexte">
                <Setter Property="VisualStateManager.VisualStateGroups">
                    <VisualStateGroupList>
                        <VisualStateGroup>
                            <VisualState x:Name="Portrait">
                                <VisualState.StateTriggers>
                                    <OrientationStateTrigger Orientation="Portrait"/>
                                </VisualState.StateTriggers>
                                <VisualState.Setters>
                                </VisualState.Setters>
                            </VisualState>
                            <VisualState x:Name="Landscape">
                                <VisualState.StateTriggers>
                                    <OrientationStateTrigger Orientation="Landscape"/>
                                </VisualState.StateTriggers>
                                <VisualState.Setters>
                                    <Setter Property="WidthRequest" Value="200"/>
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateGroupList>
                </Setter>
            </Style>
            <Style TargetType="Frame" x:Key="HilfsFrame">
                <Setter Property="VisualStateManager.VisualStateGroups">
                    <VisualStateGroupList>
                        <VisualStateGroup>
                            <VisualState x:Name="Portrait">
                                <VisualState.StateTriggers>
                                    <OrientationStateTrigger Orientation="Portrait"/>
                                </VisualState.StateTriggers>
                                <VisualState.Setters>
                                    <Setter Property="Margin" Value="20,0,20,200"/>
                                </VisualState.Setters>
                            </VisualState>
                            <VisualState x:Name="Landscape">
                                <VisualState.StateTriggers>
                                    <OrientationStateTrigger Orientation="Landscape"/>
                                </VisualState.StateTriggers>
                                <VisualState.Setters>
                                    <Setter Property="Margin" Value="450,50,0,100"/>
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateGroupList>
                </Setter>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <Grid>
        <!-- Exit-Button oben rechts -->
        <Button
            x:Name="ExitButton"
            Text="✕"
            FontSize="16"
            BackgroundColor="#F3F7FF"
            TextColor="#2D5FFF"
            CornerRadius="16"
            WidthRequest="44"
            HeightRequest="44"
            BorderColor="#E0E8FF"
            BorderWidth="2"
            HorizontalOptions="End"
            VerticalOptions="Start"
            Margin="0,16,16,0"
            Clicked="ExitButton_Clicked"/>
        
        <StackLayout x:Name="MainStack" Padding="32,40" Spacing="30" HorizontalOptions="Center" VerticalOptions="Center" Style="{StaticResource MainStack}">
            <VerticalStackLayout Spacing="{OnPlatform 22, Android=18, iOS=18}">
                <Frame 
                    x:Name="FortschritsFrame"
                    BackgroundColor="#F3F7FF"
                   CornerRadius="20"
                   Padding="22,14"
                   HasShadow="True"
                   BorderColor="#E0E8FF">
                    <VerticalStackLayout Spacing="4">
                        <Label Text="Fortschritt"
                               FontSize="{OnPlatform 15, Android=14, iOS=14}"
                               TextColor="#7A8FA6"
                               HorizontalOptions="Center"/>
                        <ProgressBar x:Name="FinishProgress" ProgressColor="#2D5FFF" BackgroundColor="#E0E8FF" Progress="0" HeightRequest="{OnPlatform WinUI=20}" />
                    </VerticalStackLayout>
                </Frame>
                <StackLayout x:Name="MobileStacker" Spacing="{OnPlatform 22, Android=18, iOS=18}" HorizontalOptions="Center" Orientation="{OnPlatform Horizontal, Android=Vertical, iOS=Vertical}" >
                    <HorizontalStackLayout Spacing="{OnPlatform 22, Android=18, iOS=18}">
                        <Frame 
                            x:Name="MultiplierFrame"
                            BackgroundColor="#F3F7FF"
                            CornerRadius="20"
                            Padding="22,14"
                            HasShadow="True"
                            BorderColor="#E0E8FF">
                            <VerticalStackLayout Spacing="2">
                                <Label Text="Multiplikator"
                                       FontSize="{OnPlatform 15, Android=14, iOS=14}"
                                       TextColor="#7A8FA6"
                                       HorizontalOptions="Center"/>
                                <Label Text="x1,0"
                                       x:Name="MultiplierLabel"
                                       FontSize="{OnPlatform 20, Android=18, iOS=18}"
                                       FontAttributes="Bold"
                                       TextColor="#4CAF50"
                                       HorizontalOptions="Center"/>
                            </VerticalStackLayout>
                        </Frame>
                        <Frame 
                            x:Name="ScoreFrame"
                            BackgroundColor="#F3F7FF"
                            CornerRadius="20"
                            Padding="22,14"
                            HasShadow="True"
                            BorderColor="#E0E8FF">
                            <VerticalStackLayout Spacing="2">
                                <Label Text="Aktueller Score"
                                       FontSize="{OnPlatform 15, Android=14, iOS=14}"
                                       TextColor="#7A8FA6"
                                       HorizontalOptions="Center"/>
                                <Label Text="0"
                                       x:Name="CurrentScoreLabel"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       TextColor="#2D5FFF"
                                       HorizontalOptions="Center"/>
                            </VerticalStackLayout>
                        </Frame>
                    </HorizontalStackLayout>
                    <Frame 
                        x:Name="FailureFrame"
                        BackgroundColor="#F3F7FF"
                        CornerRadius="20"
                        Padding="22,14"
                        HasShadow="True"
                        BorderColor="#E0E8FF">
                        <VerticalStackLayout Spacing="2">
                            <Label Text="Verbleibende Versuche"
                                   FontSize="{OnPlatform 15, Android=14, iOS=14}"
                                   TextColor="#7A8FA6"
                                   HorizontalOptions="Center"/>
                            <Label Text="0"
                                   x:Name="CurrentFailsLabel"
                                   FontSize="{OnPlatform 20, Android=18, iOS=18}"
                                   FontAttributes="Bold"
                                   TextColor="#E57373"
                                   HorizontalOptions="Center"/>
                        </VerticalStackLayout>
                    </Frame>
                </StackLayout>
            </VerticalStackLayout>

            <Grid x:Name="TilesGrid"
                  RowSpacing="8"
                  ColumnSpacing="8"
                  HorizontalOptions="Center"
                  VerticalOptions="Center"
                  Padding="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="44"/>
                    <RowDefinition Height="44"/>
                    <RowDefinition Height="44"/>
                    <RowDefinition Height="44"/>
                    <RowDefinition Height="44"/>
                    <RowDefinition Height="44"/>
                    <RowDefinition Height="44"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="44"/>
                    <ColumnDefinition Width="44"/>
                    <ColumnDefinition Width="44"/>
                    <ColumnDefinition Width="44"/>
                    <ColumnDefinition Width="44"/>
                    <ColumnDefinition Width="44"/>
                    <ColumnDefinition Width="44"/>
                </Grid.ColumnDefinitions>
            </Grid>
        </StackLayout>
        <VerticalStackLayout
            HorizontalOptions="Start"
            VerticalOptions="End"
            Margin="16,0,0,16">
            <HorizontalStackLayout
                Spacing="2">
                <ImageButton
                    x:Name="HelpButton"
                    Source="helpicon.png"
                    BackgroundColor="#F3F7FF"
                    CornerRadius="16"
                    WidthRequest="44"
                    HeightRequest="44"
                    BorderColor="#E0E8FF"
                    BorderWidth="2"
                    Clicked="OnHelpButtonClicked"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </Grid>
</ContentPage>