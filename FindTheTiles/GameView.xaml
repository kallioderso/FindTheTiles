<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FindTheTiles.GameView"
             BackgroundColor="#F9FBFF">

    <ContentPage.Background>
        <LinearGradientBrush EndPoint="0,1">
            <GradientStop Color="#F9FBFF" Offset="0.0" />
            <GradientStop Color="#E6F0FF" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <Grid>
        <!-- Exit-Button oben rechts -->
        <Button
            x:Name="ExitButton"
            Text="✕"
            FontSize="16"
            BackgroundColor="#F3F7FF"
            TextColor="#2D5FFF"
            CornerRadius="16"
            WidthRequest="44"
            HeightRequest="44"
            BorderColor="#E0E8FF"
            BorderWidth="2"
            HorizontalOptions="End"
            VerticalOptions="Start"
            Margin="0,16,16,0"
            Clicked="ExitButton_Clicked"/>

        <VerticalStackLayout Padding="32,40" Spacing="36" HorizontalOptions="Center" VerticalOptions="Center">
            <HorizontalStackLayout Spacing="28" HorizontalOptions="Center">
                <Frame BackgroundColor="#F3F7FF"
                       CornerRadius="20"
                       Padding="22,14"
                       HasShadow="True"
                       BorderColor="#E0E8FF">
                    <VerticalStackLayout Spacing="2">
                        <Label Text="Multiplikator"
                               FontSize="13"
                               TextColor="#7A8FA6"
                               HorizontalOptions="Center"/>
                        <Label Text="x1,0"
                               x:Name="MultiplierLabel"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="#4CAF50"
                               HorizontalOptions="Center"/>
                        <Label Text="Aktueller Score"
                               FontSize="15"
                               TextColor="#7A8FA6"
                               HorizontalOptions="Center"/>
                        <Label Text="0"
                               x:Name="CurrentScoreLabel"
                               FontSize="26"
                               FontAttributes="Bold"
                               TextColor="#2D5FFF"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Frame>
            </HorizontalStackLayout>

            <Grid x:Name="TilesGrid"
                  RowSpacing="8"
                  ColumnSpacing="8"
                  HorizontalOptions="Center"
                  VerticalOptions="Center"
                  Padding="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="44"/>
                    <RowDefinition Height="44"/>
                    <RowDefinition Height="44"/>
                    <RowDefinition Height="44"/>
                    <RowDefinition Height="44"/>
                    <RowDefinition Height="44"/>
                    <RowDefinition Height="44"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="44"/>
                    <ColumnDefinition Width="44"/>
                    <ColumnDefinition Width="44"/>
                    <ColumnDefinition Width="44"/>
                    <ColumnDefinition Width="44"/>
                    <ColumnDefinition Width="44"/>
                    <ColumnDefinition Width="44"/>
                </Grid.ColumnDefinitions>
            </Grid>
        </VerticalStackLayout>
    </Grid>
</ContentPage>