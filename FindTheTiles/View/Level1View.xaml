<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FindTheTiles.View.Level1View"
             xmlns:local="using:FindTheTiles.ViewModel"
             BackgroundColor="#F9FBFF">
    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsVisible="False" IsEnabled="False" />
    </Shell.BackButtonBehavior>
    <ContentPage.Background>
        <LinearGradientBrush EndPoint="0,1">
            <GradientStop Color="#ffffff" Offset="0.0" />
            <GradientStop Color="#ece1f4" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <ContentPage.BindingContext>
        <local:Level1ViewModel/>
    </ContentPage.BindingContext>

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="StackLayout" x:Key="MainStack">
                <Setter Property="VisualStateManager.VisualStateGroups">
                    <VisualStateGroupList>
                        <VisualStateGroup>
                            <VisualState x:Name="Portrait">
                                <VisualState.StateTriggers>
                                    <OrientationStateTrigger Orientation="Portrait"/>
                                </VisualState.StateTriggers>
                                <VisualState.Setters>
                                    <Setter Property="Orientation" Value="Vertical"/>
                                </VisualState.Setters>
                            </VisualState>
                            <VisualState x:Name="Landscape">
                                <VisualState.StateTriggers>
                                    <OrientationStateTrigger Orientation="Landscape"/>
                                </VisualState.StateTriggers>
                                <VisualState.Setters>
                                    <Setter Property="Orientation" Value="Horizontal"/>
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateGroupList>
                </Setter>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <Grid>
        <!-- Exit-Button oben rechts -->
        <ImageButton
                Source="exit.png"
                BackgroundColor="#F3F7FF"
                CornerRadius="16"
                WidthRequest="60"
                HeightRequest="60"
                BorderColor="#E0E8FF"
                BorderWidth="2"
                HorizontalOptions="End"
                VerticalOptions="Start"
                Margin="0,16,16,0"
                Command="{Binding _exitCommand}"
                ToolTipProperties.Text="{Binding _staticTextExitTT}"/>

        <StackLayout Padding="32,40" Spacing="30" HorizontalOptions="Center" VerticalOptions="Center" Style="{StaticResource MainStack}">
            <VerticalStackLayout Spacing="{OnPlatform 22, Android=18, iOS=18}">
                <Frame 
                    BackgroundColor="#FFFFFF"
                    CornerRadius="20"
                    Padding="22,14"
                    HasShadow="True"
                    BorderColor="#a997d7"
                    ToolTipProperties.Text="{Binding _progressText}">
                    <VerticalStackLayout Spacing="4">
                        <Label Text="{Binding _staticTextProgress}"
                               FontSize="{OnPlatform 19, Android=14, iOS=14}"
                               TextColor="#503a8f"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"/>
                        <ProgressBar ProgressColor="#a997d7" BackgroundColor="#E0E8FF"
                                     Progress="{Binding _progress}" HeightRequest="{OnPlatform WinUI=20}" />
                    </VerticalStackLayout>
                </Frame>
                <StackLayout Spacing="{OnPlatform 22, Android=18, iOS=18}" HorizontalOptions="Center" Orientation="{OnPlatform Horizontal, Android=Vertical, iOS=Vertical}" >
                    <HorizontalStackLayout Spacing="{OnPlatform 22, Android=18, iOS=18}">
                        <Frame 
                            BackgroundColor="#FFFFFF"
                            CornerRadius="20"
                            Padding="22,14"
                            HasShadow="True"
                            BorderColor="#a997d7"
                            ToolTipProperties.Text="{Binding _multiplierText}">
                            <VerticalStackLayout Spacing="2">
                                <Label Text="{Binding _staticTextMultiplyer}"
                                       FontSize="{OnPlatform 19, Android=14, iOS=14}"
                                       TextColor="#503a8f"
                                       FontAttributes="Bold"
                                       HorizontalOptions="Center"/>
                                <Label Text="{Binding _multiplier, StringFormat='x{0:F1}'}"
                                       FontSize="{OnPlatform 17, Android=18, iOS=18}"
                                       FontAttributes="Bold"
                                       TextColor="#4CAF50"
                                       HorizontalOptions="Center"/>
                            </VerticalStackLayout>
                        </Frame>
                        <Frame 
                            BackgroundColor="#FFFFFF"
                            CornerRadius="20"
                            Padding="22,14"
                            HasShadow="True"
                            BorderColor="#a997d7"
                            ToolTipProperties.Text="{Binding _scoreText}">
                            <VerticalStackLayout Spacing="2">
                                <Label Text="{Binding _staticTextScore}"
                                       FontSize="{OnPlatform 19, Android=14, iOS=14}"
                                       TextColor="#503a8f"
                                       FontAttributes="Bold"
                                       HorizontalOptions="Center"/>
                                <Label Text="{Binding _score}"
                                       FontSize="17"
                                       FontAttributes="Bold"
                                       TextColor="#a997d7"
                                       HorizontalOptions="Center"/>
                            </VerticalStackLayout>
                        </Frame>
                    </HorizontalStackLayout>
                    <Frame 
                        BackgroundColor="#FFFFFF"
                        CornerRadius="20"
                        Padding="22,14"
                        HasShadow="True"
                        BorderColor="#a997d7"
                        ToolTipProperties.Text="{Binding _tryText}">
                        <VerticalStackLayout Spacing="2">
                            <Label Text="{Binding _staticTextTrys}"
                                   FontSize="{OnPlatform 19, Android=14, iOS=14}"
                                   TextColor="#503a8f"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"/>
                            <Label Text="{Binding _trys}"
                                   FontSize="{OnPlatform 17, Android=18, iOS=18}"
                                   FontAttributes="Bold"
                                   TextColor="#E57373"
                                   HorizontalOptions="Center"/>
                        </VerticalStackLayout>
                    </Frame>
                </StackLayout>
                <HorizontalStackLayout Spacing="8">
                    <ImageButton
                    Source="{Binding _searcherObtained}"
                    BackgroundColor="#F3F7FF"
                    CornerRadius="16"
                    WidthRequest="60"
                    HeightRequest="60"
                    BorderColor="#E0E8FF"
                    BorderWidth="2"
                    Command="{Binding _searchCommand}"
                    ToolTipProperties.Text="{Binding _staticTextSearcherTT}"/>
                    <ImageButton
                    Source="{Binding _bombObtained}"
                    BackgroundColor="#F3F7FF"
                    CornerRadius="16"
                    WidthRequest="60"
                    HeightRequest="60"
                    BorderColor="#E0E8FF"
                    BorderWidth="2"
                    Command="{Binding _bombCommand}"
                    ToolTipProperties.Text="{Binding _staticTextBombTT}"/>
                    <ImageButton
                    Source="{Binding _sealObtained}"
                    BackgroundColor="Transparent"
                    CornerRadius="16"
                    WidthRequest="60"
                    HeightRequest="60"
                    BorderColor="Transparent"
                    BorderWidth="2"
                    Command="{Binding _sealCommand}"
                    ToolTipProperties.Text="{Binding _staticTextSealTT}"/>
                </HorizontalStackLayout>
            </VerticalStackLayout>

            <Grid x:Name="TilesGrid"
                  RowSpacing="8"
                  ColumnSpacing="8"
                  HorizontalOptions="Center"
                  VerticalOptions="Center"
                  Padding="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="44"/>
                    <RowDefinition Height="44"/>
                    <RowDefinition Height="44"/>
                    <RowDefinition Height="44"/>
                    <RowDefinition Height="44"/>
                    <RowDefinition Height="44"/>
                    <RowDefinition Height="44"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="44"/>
                    <ColumnDefinition Width="44"/>
                    <ColumnDefinition Width="44"/>
                    <ColumnDefinition Width="44"/>
                    <ColumnDefinition Width="44"/>
                    <ColumnDefinition Width="44"/>
                    <ColumnDefinition Width="44"/>
                </Grid.ColumnDefinitions>
            </Grid>
        </StackLayout>

        <Frame 
            IsVisible="{Binding _languagesettings}" 
            HorizontalOptions="Center" 
            VerticalOptions="Center"
            BackgroundColor="#FFFFFF"
            BorderColor="#a997d7"
            CornerRadius="20"
            Padding="22,14">
            <HorizontalStackLayout Spacing="8">
                <ImageButton HeightRequest="100" WidthRequest="100" CornerRadius="16" BackgroundColor="#F3F7FF" BorderColor="#E0E8FF" BorderWidth="2" Source="german.png" Command="{Binding _germanCommand}"/>
                <ImageButton HeightRequest="100" WidthRequest="100" CornerRadius="16" BackgroundColor="#F3F7FF" BorderColor="#E0E8FF" BorderWidth="2" Source="frensh.png" Command="{Binding _frenshCommand}"/>
                <ImageButton HeightRequest="100" WidthRequest="100" CornerRadius="16" BackgroundColor="#F3F7FF" BorderColor="#E0E8FF" BorderWidth="2" Source="english.png" Command="{Binding _englishCommand}"/>
            </HorizontalStackLayout>
        </Frame>
        
        <VerticalStackLayout
            HorizontalOptions="Start"
            VerticalOptions="End"
            Margin="16,0,0,16">
            <HorizontalStackLayout
                Spacing="2">
                <ImageButton
                    Source="helpicon.png"
                    BackgroundColor="#F3F7FF"
                    CornerRadius="16"
                    WidthRequest="60"
                    HeightRequest="60"
                    BorderColor="#E0E8FF"
                    BorderWidth="2"
                    Command="{Binding _tutorialCommand}"
                    ToolTipProperties.Text="{Binding _staticTextTutorialTT}"/>
                <ImageButton
                    Source="german.png"
                    BackgroundColor="#F3F7FF"
                    CornerRadius="16"
                    WidthRequest="60"
                    HeightRequest="60"
                    BorderColor="#E0E8FF"
                    BorderWidth="2"
                    Command="{Binding _languageCommand}"
                    ToolTipProperties.Text="{Binding _staticTextLanguageTT}"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </Grid>
</ContentPage>